{% extends 'frontend/basic.twig' %}

{% block menu %}
	{% include 'frontend/_parts/menu/main_menu.twig' %}
{% endblock %}
{% block content %}
	{% autoescape false %}
		<script>
	    $(document).ready(function() {
	   		$("[data-fancybox]").fancybox({});
	    });
  		</script>
		{{ info_page.content }}
		<section class="portfolio portfolio_page">
		    {% for item in portfolio %}
			    <div class="portfolio__block">
			      <h3 class="portfolio__name">{{ item.title }}</h3>
			      <a href="{{base_url}}uploads/project/{{ item['images'][0]['name']}}" data-fancybox="group{{ item.id }}" class="portfolio__link">{{ item.text}}</a>
			      <img class="portfolio__img" src="{{base_url}}uploads/project/{{ item['images'][0]['name']}}" alt="{{ item.title }}"/>
			      	{% for key, img in image[item.id] %}
				      	{% if key > 0 %}
				      		<a href="{{base_url}}uploads/project/{{img.name}}" data-fancybox="group{{ item.id }}" style="display: none;"></a>
						{% endif %}
		      		{% endfor %}
			    </div>
		    {% endfor %}
  		</section>
	{% endautoescape %}
{% endblock %}
